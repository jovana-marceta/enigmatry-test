<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>{{title}}</title>
  <link rel="stylesheet" href="{{assets}}/styles/main.css">

  <!-- Disable tap highlight on IE -->
  <meta name="msapplication-tap-highlight" content="no">

  <!-- for Chrome on Android -->
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="application-name" lang="en" content="{{title}}">
  <link rel="icon" sizes="192x192" href="{{assets}}/img/favicons/android-chrome-192x192.png">

  <!-- for Safari on iOS -->
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
  <meta name="apple-mobile-web-app-title" content="{{title}}">

  <meta name="theme-color" content="#FFFFFF">

  <link rel="shortcut icon" href="{{assets}}/img/favicons/favicon.ico">
  <link rel="icon" type="image/png" sizes="16x16" href="{{assets}}/img/favicons/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="{{assets}}/img/favicons/favicon-32x32.png">
  <link rel="apple-touch-icon" sizes="57x57" href="{{assets}}/img/favicons/apple-touch-icon-57x57.png">
  <link rel="apple-touch-icon" sizes="60x60" href="{{assets}}/img/favicons/apple-touch-icon-60x60.png">
  <link rel="apple-touch-icon" sizes="72x72" href="{{assets}}/img/favicons/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="76x76" href="{{assets}}/img/favicons/apple-touch-icon-76x76.png">
  <link rel="apple-touch-icon" sizes="114x114" href="{{assets}}/img/favicons/apple-touch-icon-114x114.png">
  <link rel="apple-touch-icon" sizes="120x120" href="{{assets}}/img/favicons/apple-touch-icon-120x120.png">
  <link rel="apple-touch-icon" sizes="144x144" href="{{assets}}/img/favicons/apple-touch-icon-144x144.png">
  <link rel="apple-touch-icon" sizes="152x152" href="{{assets}}/img/favicons/apple-touch-icon-152x152.png">
  <link rel="apple-touch-icon" sizes="167x167" href="{{assets}}/img/favicons/apple-touch-icon-167x167.png">
  <link rel="apple-touch-icon" sizes="180x180" href="{{assets}}/img/favicons/apple-touch-icon-180x180.png">
  <link rel="apple-touch-icon" sizes="1024x1024" href="{{assets}}/img/favicons/apple-touch-icon-1024x1024.png">

  {{!-- Importing FontAwesome 6 personal kit --}}
  <script src="https://kit.fontawesome.com/cda5a90d6e.js" crossorigin="anonymous"></script>
</head>
<body>

    <header class="header bg-orange">
      <div class="container">
        <div class="row">
          <div class="header__content d-flex flex-row align-items-center justify-content-between">
            <div class="d-flex flex-row align-items-center">
              <a href="{{indexDir}}">
                <img src="{{header.logo}}" alt="{{header.logo-alt}}" class="header__logo"> 
              </a>


              {{> navbar }}

            
              <div class="header__input-group input-group">
                <input type="search" class="header__form-control form-control" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <span class="header__group-    input-group-text border-0" id="search-addon">
                  <i class="fas fa-search"></i>
                </span>
              </div>
            </div>
            <div class="header__action-btns">
              <a href="javascript:;" class="header__icon">
                <i class="fa-regular fa-user"></i>
              </a>
              <a href="javascript:;" class="header__icon">
                <i class="fa-regular fa-heart"></i>
              </a>
              <a href="javascript:;" class="header__icon">
                {{!-- I exported chart icon from Figma with svg sprite since it is pro icon --}}
                <svg class="text-success" viewBox="0 0 314.009 314.009" style="width: 1em; height: 1em">
                  <use href="{{assets}}/img/svg-sprite/sprite.svg#shopping-cart"></use>
                </svg>
              </a>
            </div>
          </div>

        </div>
      </div>
    </header>

